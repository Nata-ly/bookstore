<%= link_to 'Все книги', books_path %>
<p>
  <h5>Категория:</h5>
</p>

<div>
  <h5>Поиск по автору:</h5>
  <%= form_tag(books_path, method: "get") do %>
    <p>
      <%= label_tag("Введите автора:") %>
    </p>
    <p>
      <%= text_field_tag(:search_author) %>
    </p>
    <p>
      <%= submit_tag("Поиск", class: "btn btn-info") %>
    <p>
  <% end %>
</div>
